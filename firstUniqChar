class Solution {
public:
    int firstUniqChar(string s) 
    {
        unordered_map<char,int>freq;
        queue<pair<char,int>>q;
        for(int i=0;i<s.length();i++)
        {
            char c=s[i];
            freq[c]++;
            q.push({c,i});            
        }
        while(!q.empty()&& freq[q.front().first]>1)  
        {
            q.pop();
        }    
    
    if(!q.empty())
    {
        return q.front().second;
    }
    else
    {
        return -1;
    }
    }
};
